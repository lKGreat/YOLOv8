<?xml version="1.0" encoding="utf-8" ?>
<!-- 
  Sample NLog configuration for YOLO.Runtime inference logging.
  Copy this file to your application's output directory or embed it in your project.
  
  To use: ensure NLog is configured in your app startup:
    NLog.LogManager.Setup().LoadConfigurationFromFile("nlog.config");
  Or use the NLog.Extensions.Logging for ASP.NET Core / Generic Host.
-->
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true">

  <targets>
    <!-- Console output with colored highlighting -->
    <target name="console"
            xsi:type="ColoredConsole"
            layout="${date:format=HH\:mm\:ss.fff} | ${level:uppercase=true:padding=-5} | ${logger} | ${message}" />

    <!-- File output for inference timing logs -->
    <target name="file"
            xsi:type="File"
            fileName="logs/yolo-inference-${shortdate}.log"
            layout="${longdate} | ${level:uppercase=true:padding=-5} | ${logger} | ${message} ${exception:format=tostring}"
            archiveAboveSize="10485760"
            maxArchiveFiles="5" />
  </targets>

  <rules>
    <!-- Log YOLO.Runtime messages to both console and file -->
    <logger name="YOLO.Runtime" minlevel="Debug" writeTo="console,file" />
    
    <!-- Suppress other noisy loggers -->
    <logger name="Microsoft.*" maxlevel="Warn" final="true" />
  </rules>
</nlog>
